<%= simple_form_for @shark do |f| %>
  <%= f.input :name, :label_html => { :class => 'text-white' } %>
  <%= f.input :age, :label_html => { :class => 'text-white' } %>
  <%= f.input :breed, :label_html => { :class => 'text-white' } %>
  <%= f.input :description, :label_html => { :class => 'text-white' } %>
  <%= f.input :price, :label_html => { :class => 'text-white' } %>
  <%= f.input :diet, :label_html => { :class => 'text-white' } %>
  <%= f.input :picture_url, :label_html => { :class => 'text-white' } %>
  <%= f.button :submit, class: "btn btn-big"%>
<% end %>

